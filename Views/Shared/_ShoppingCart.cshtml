<script>
    $(document).ready(function () {
        $('.add-to-cart').click(function (e) {
            e.preventDefault();
            let pid = $(this).data("id") ?? '';
            let quantity = $('#product_quantity_' + pid).val() ?? 1;
            let data = {
                id: pid,
                quantity: quantity
            };
            postAjax(data);
        });

        function postAjax(data) {
            console.log(`data>>>>`, data); //ok
            $.ajax({
                type: "POST",
                url: "/add-cart",
                data: data,
                success: function (result) {
                    console.log(result); //ok
                    $("#count_cart").html(result.count)
                    toastr["success"]("Success", "Added successfully");
                    window.location.href = "@Url.RouteUrl("cart")";
                },
                error: function (e) {
                    console.log(e);
                    toastr["error"]("Error", e);
                }
            });
        };

        function getCart() {
            $.get("/get-cart", function (res) {
                display(res.data);
            });
        };

        //check voucher
        $("#check_voucher").on("click", function (e) {
            e.preventDefault();
            let code = $("#Code").val();
            alert(`Check voucher>>>>${code}`)
            $.ajax({
                type: "POST",
                url: "@Url.RouteUrl("checkvoucher")",
                data: {
                    code: code,
                },
                success: function (result) {
                    if (result.code) {
                        let discount = Number.parseFloat(result.discount);
                        let total = Number.parseFloat(result.value);
                        $('#discount').html(discount);
                        $('#total').html(total);
                    }
                    if (result.error) {
    @* toastr["error"]("Error", result.error); *@
                            $("#error_voucher").html(result.error);
                        $("#Code").empty();
                    }
                }
            })
        });




    });
</script>
