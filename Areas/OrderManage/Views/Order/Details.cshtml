@using OnlineShoppingCart.Models.DTOs;
@using OnlineShoppingCart.Data.Entities;
@model OrderDto;
@inject OnlineShoppingCart.Core.UnitOfWork.IUnitOfWork _unitOfWork;

@{
    ViewData["Title"] = "The details of the payments";
    double subtotal = 0.00;
    var vouchers = await _unitOfWork.Vouchers.GetAll();
    var voucher = vouchers != null
    ? vouchers.SingleOrDefault(x => x.Id == Model.VoucherId)
    : new Voucher();
    double discount = voucher != null ? voucher.Discount : 0;
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">@ViewData["Title"]</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item">
                            <a asp-area="OrderManage" asp-controller="Order" asp-action="Index">Orders</a>
                        </li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">

                    <!-- Main content -->
                    <div class="invoice p-3 mb-3">
                        <!-- title row -->
                        <div class="row">
                            <div class="col-12">
                                <h4>
                                    <i class="fas fa-globe"></i> Online Shopping Cart.
                                    <small class="float-right">Date:
                                        @String.Format("{0:MM/dd/yyyy}", Model.OrderDate)</small>
                                </h4>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- info row -->
                        <div class="row invoice-info">
                            <div class="col-sm-4 invoice-col">
                                From
                                <address>
                                    <strong>Arts Shop</strong><br>
                                    391A Nam Ky Khoi Nghia, Vo Thi Sau W.<br>
                                    D3, HCM City<br>
                                    Phone: +84 898313863<br>
                                    Email: onlineshoppingcart.arts@gmail.com
                                </address>
                            </div>
                            <!-- /.col -->
                            <div class="col-sm-4 invoice-col">
                                To
                                <address>
                                    <strong>@Model.Shipping.Name</strong><br>
                                    @Model.Shipping.Address, @Model.Shipping.Wards<br>
                                    @Model.Shipping.District, @Model.Shipping.City<br>
                                    Phone: @Model.Shipping.Phone<br>
                                    Email: @Model.Shipping.Email
                                </address>
                            </div>
                            <!-- /.col -->
                            <div class="col-sm-4 invoice-col">
                                <b>Invoice #@Model.Id</b><br>
                                <br>
                                <b>Order ID:</b> @Model.Id<br>
                                <b>Payment Due:</b> @Model.UpdateAt<br>
                                <b>Account:</b> 968-34567 <br>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->

                        <!-- Table row -->
                        <div class="row">
                            <div class="col-12 table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Product</th>
                                            <th>Order No</th>
                                            <th>Qty</th>
                                            <th>Price</th>
                                            <th>Subtotal</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.OrderDetails != null)
                                        {
                                            var n = 0;
                                            @foreach (var item in Model.OrderDetails)
                                            {
                                                var amount = item.Price * item.Quantity;
                                                subtotal += amount;
                                                <tr>
                                                    <td>@(n++)</td>
                                                    <td>
                                                        <a asp-area="ProductManage" asp-controller="Product"
                                                            asp-action="Details" asp-route-id="@item.ProductId"
                                                            class="text-info">
                                                            @item.ProductId
                                                        </a>
                                                    </td>
                                                    <td>@item.OrderNumber</td>
                                                    <td>@item.Quantity</td>
                                                    <td>@item.Price</td>
                                                    <td>@amount</td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->

                        <div class="row">
                            <!-- accepted payments column -->
                            <div class="col-6">
                                <p class="lead">Payment Methods: <span>@Model.PaymentMethod</span></p>
                                <p class="lead">Payment Status: <span>@Model.PaymentStatus</span></p>
                                <p class="lead">Order Status: <span>@Model.OrderStatus</span></p>

                                <p class="text-muted well well-sm shadow-none" style="margin-top: 10px;">
                                    Note : <span class="text-info">@Model.Shipping.Note</span>
                                </p>
                            </div>
                            <!-- /.col -->
                            <div class="col-6">
                                <div class="table-responsive">
                                    <table class="table text-end">
                                        <tr>
                                            <th style="width:50%">Subtotal:</th>
                                            <td>$@subtotal.ToString("N2")</td>
                                        </tr>
                                        <tr>
                                            <th>Voucher:</th>
                                            <td>-$@discount.ToString("N2")</td>
                                        </tr>
                                        <tr>
                                            <th>Shipping:</th>
                                            <td>$@Model.Shipping.ShippingFee</td>
                                        </tr>
                                        <tr>
                                            <th>Total:</th>
                                            <td>$@Model.OrderTotal.ToString("N2")</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->

                        <!-- this row will not appear when printing -->
                        <div class="row no-print">
                            <div class="col-12">
                                <button type="button" class="btn btn-success float-right"><i
                                        class="far fa-credit-card"></i> Update status
                                    Payment
                                </button>
                                <button type="button" class="btn btn-primary float-right" style="margin-right: 5px;">
                                    <i class="fas fa-download"></i> Generate PDF
                                </button>
                            </div>
                        </div>
                    </div>
                    <!-- /.invoice -->
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
