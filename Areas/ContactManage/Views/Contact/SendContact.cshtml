@model OnlineShoppingCart.Data.Entities.Contact

@{
    Layout = "_Layout";
    ViewData["Title"] = "Contact";
}

<section class="container py-5">
    <div class="row">
        <div class="col-12 col-md-5">
            <div class="contact-first-col p-2 h-100">
                <img src="~/images/email-messages-icon.png" alt="icon">
                <h1>@ViewData["Title"]</h1>
                <h4>We are looking forward to your feedback! </h4>
            </div>
        </div>
        <div class="col-12 col-md-7 px-3">
            <form asp-action="SendContact" class="p-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="AppUser!.Email" class="control-label"></label>
                    <input asp-for="AppUser!.Email" class="form-control" required placeholder="Enter your email" />
                    <span asp-validation-for="AppUser!.Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Subject" class="control-label"></label>
                    <input asp-for="Subject" class="form-control" required placeholder="Enter subject" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Content" class="control-label"></label>
                    <textarea asp-for="Content" class="form-control" rows=5 required
                        placeholder="Enter to here..."></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Send" class="btn w-50 btn-success float-end" />
                </div>
            </form>
        </div>
    </div>
</section>
