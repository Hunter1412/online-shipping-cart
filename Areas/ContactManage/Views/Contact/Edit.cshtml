@model OnlineShoppingCart.Models.DTOs.ContactDto

@{
    ViewData["Title"] = "Answer the question";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@ViewData["Title"]</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Contact</a></li>
                        <li class="breadcrumb-item active">Answer</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="card card-info card-outline">
                <div class="card-header">
                    <h3 class="h3 card-title">@ViewData["Title"] - @Model.AppUser!.Email</h3>
                </div>
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="AppUser!.Email" class="control-label">To:</label>
                            <input class="form-control" asp-for="AppUser!.Email">
                        </div>

                        <div class="form-group">
                            <label asp-for="Subject" class="control-label"></label>
                            <input class="form-control" asp-for="Subject" required>
                        </div>
                        <div class="form-group">
                            <label asp-for="Content" class="control-label">Content of Question</label>
                            <input asp-for="Content" class="form-control" readonly />
                        </div>
                        <div class="form-group">
                            <textarea asp-for="Answer" class="form-control">
                                    <h4>Hi, @Model.AppUser.FirstName</h4>
                                    <p>Message......</p>
                                    <p>---o0o---</p>
                                    <p>Thank you,</p>
                                    <p>Arts Shop</p>
                                    <ul>
                                        <li>--------</li>
                                        <li>Phone number: +84 898313863</li>
                                        <li>Address: </li>
                                    </ul>
                                </textarea>
                            <span asp-validation-for="Answer" class="text-danger"></span>
                        </div>
                        <input asp-for="UserId" class="form-control" type="hidden" />
                        <input asp-for="CreateAt" class="form-control" type="hidden" />
                        <input asp-for="UpdateAt" class="form-control" type="hidden" />

                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <div class="float-right">
                            <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i>
                                Send</button>
                        </div>
                        <a asp-area="ContactManage" asp-controller="Contact" asp-action="Index">Back to List</a>
                    </div>
                    <!-- /.card-footer -->
                </form>

            </div>
            <!-- /.card -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

@{
    var summernote = new OnlineShoppingCart.Models.Summernote("#Answer")
            {
                Height = 500
            };
}
@section Scripts {
    <!-- Summernote -->
    <partial name="_Summernote" model="summernote" />
}
