@model OnlineShoppingCart.Models.DTOs.CategoryDto

@{
    ViewData["Title"] = "Catelogy Infomation";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">@ViewData["Title"]</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-area="CategoryManage" asp-controller="Category"
                                asp-action="Index">Category list</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">

            <div class="card">
                <div class="card-header">
                    <strong class="h3 card-title">@ViewData["Title"]</strong>
                </div>

                <!-- /.card-header -->
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-10">
                            <span>
                                @Html.Raw(Model.Description)
                            </span>
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Image)
                        </dt>
                        <dd class="col-sm-10">
                            @if (Model.Image != null)
                            {
                                <img src="~/assets/img/@Model.Image" width="100" height="auto" alt="@Model.Name" />
                            }
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Parent)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Parent!.Name)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CreateAt)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CreateAt)
                        </dd>
                    </dl>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <a asp-area="CategoryManage" asp-controller="Category" asp-action="Index">Back to list</a> |
                    <a asp-area="CategoryManage" asp-controller="Category" asp-action="Edit"
                        asp-route-id="@Model.Id">Edit</a>
                </div>
            </div>
            <!-- /.card -->

        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /.content -->
</div>
